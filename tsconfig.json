{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false
  },
  "include": ["src"]
}